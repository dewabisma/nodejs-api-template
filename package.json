{
  "name": "backend-base",
  "version": "1.0.0",
  "description": "Dewata software backend minimalist REST API setup",
  "type": "module",
  "engines": {
    "node": ">= 20.9 < 21"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "5.0.0",
    "@types/jest": "~29.5",
    "@types/json-bigint": "^1.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/mustache": "^4.2.5",
    "@types/node": "~20",
    "@types/nodemailer": "^6.4.16",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.11.8",
    "@typescript-eslint/eslint-plugin": "~7.6",
    "@typescript-eslint/parser": "~7.6",
    "drizzle-kit": "^0.28.1",
    "eslint": "~8.56",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-jest": "~28.2",
    "jest": "~29.7",
    "prettier": "~3.2",
    "rimraf": "~5.0",
    "ts-api-utils": "~1.3",
    "ts-jest": "~29.1",
    "tsc-alias": "^1.8.10",
    "typescript": "~5.4"
  },
  "scripts": {
    "start": "node dist/src/app.js",
    "dev": "concurrently \"npm run build:watch\" \"nodemon --exec npm start\"",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:watch": "concurrently \"tsc -w -p tsconfig.json\" \"tsc-alias -w -p tsconfig.json\"",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node dist/src/scripts/migration.js -start",
    "db:recreate": "node dist/src/scripts/recreate.js -start",
    "db:update": "npm run build && npm run db:generate && npm run db:migrate",
    "db:startover": "rimraf src/migration && npm run build && npm run db:generate && node dist/src/scripts/startover.js",
    "db:seed": "npm run build && node dist/src/scripts/seeding.js -start",
    "postinstall": "node ./drizzle-pg-timestamp-patch.js"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf-csrf": "^3.0.6",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.3",
    "express": "^5.0.1",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.0.0",
    "json-bigint": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mustache": "^4.2.0",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "tslib": "~2.6",
    "typedi": "^0.10.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "yup": "^1.4.0"
  },
  "volta": {
    "node": "20.12.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
